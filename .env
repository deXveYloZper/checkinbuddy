# Application Configuration
APP_PORT=3000
NODE_ENV=development
CLIENT_URL=http://localhost:8081

# Database (PostgreSQL)
DB_HOST=postgres # or 127.0.0.1
DB_PORT=5432
DB_USERNAME=checkinbuddy # Or your user
DB_PASSWORD=12345
DB_NAME=checkinbuddy

# JWT Authentication (for your app's tokens)
JWT_SECRET=a-very-strong-and-long-secret-key-for-jwt
JWT_EXPIRES_IN=1d

# Firebase Admin SDK
# Download your serviceAccountKey.json from Firebase Console
# and place this variable's value as the path to it.
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json

# AWS S3 (for document storage)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_REGION=YOUR_AWS_S3_BUCKET_REGION
AWS_S3_BUCKET_NAME=YOUR_CHECKINBUDDY_DOCUMENTS_BUCKET_NAME

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_... # Use your test secret key
STRIPE_PUBLISHABLE_KEY=pk_test_... # Use your test publishable key
STRIPE_WEBHOOK_SECRET=whsec_... # For testing webhooks

# Mapbox (for geocoding)
MAPBOX_API_KEY=YOUR_MAPBOX_API_ACCESS_TOKEN